<section class="filters">
    <div class="container">
        <div class="filter-grid">
            <div class="filter-item">
                <label for="car-model">Araba Markası</label>
                <select id="car-model">
                    <option value="">Seçiniz</option>
                    <option value="sedan">Audi</option>
                    <option value="hatchback">BMW</option>
                    <option value="suv">Mercedes</option>
                </select>
            </div>
            <div class="filter-item">
                <label for="tyre-size">Lastik Boyutu</label>
                <select id="tyre-size">
                    <option value="">Seçiniz</option>
                    <option value="205-55-r16">205/55 R16</option>
                    <option value="215-65-r16">215/65 R16</option>
                    <option value="225-45-r17">225/45 R17</option>
                </select>
            </div>
            <div class="filter-item">
                <label for="rim-size">Jant Boyutu</label>
                <select id="rim-size">
                    <option value="">Seçiniz</option>
                    <option value="16">16 inç</option>
                    <option value="17">17 inç</option>
                    <option value="18">18 inç</option>
                </select>
            </div>

            <div class="filter-item">
                <label for="price-range">Fiyat Aralığı</label>
                <input type="range" id="price-range" min="0" max="100" value="50">
            </div>
        </div>
    </div>
</section>